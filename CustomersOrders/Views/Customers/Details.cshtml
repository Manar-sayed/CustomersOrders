@model CustomersOrders.Models.Customers

@{
    ViewData["Title"] = "Details";
}


<div class="row text-light">
    <div class="col-md-8 offset-2">
        <div class="text-center text-info">
            <h2>Your Order History</h2>
        </div>
<div>
            <table class="table">
                <thead class="text-info">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Products)
                        </th>

                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            @Html.DisplayFor(model =>model.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Mobile)
                        </td>
                        <td>
                            @foreach (var item in Model.Products)
                            {
                              <p>@item.Name - @item.Price</p>
                            }
                        </td>
                    </tr>

                </tbody>
            </table>

</div>
<div>
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="text-info text-decoration-none">Edit</a> |
            <a asp-action="Index" class="text-info text-decoration-none">Back to List</a>
</div>
</div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Lobster&display=swap');

    h2 {
        font-family: 'Lobster', cursive;
        margin-bottom: 40px;
        margin-Top: 10px;
        white-space: nowrap;
        padding: 10px;
        overflow: hidden;
        width: 100%;
        animation: animtext 4s steps(80, end);
        transition: all cubic-bezier(0.1, 0.7, 1.0, 0.1);
        font-weight:400;
    }

    @@keyframes animtext {
        from {
            width: 0;
            transition: all 2s ease-in-out;
        }
    }
</style>

